<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--发现界面RecycleView的边距-->
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="EyepetzierTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/textsize_app</item>
        <!--<item name="android:typeface">@string/app_font_family</item>-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTabLayout">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleFgmtFeedLvTextview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_app_large</item>
    </style>
    <!--发现界面线性布局设置-->
    <style name="FragmentDiscovery_ll_set">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--发现界面左边图片边距-->
    <style name="FragmentDiscovery_left_icon_margin">
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <!--发现界面右边图片边距-->
    <style name="FragmentDiscovery_right_icon_margin">
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="AuthorFragmentTextView">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AuthorFragmentChildTextView">
        <item name="android:textColor">@color/author_fragment_child_rv_text_color</item>
    </style>
</resources>
