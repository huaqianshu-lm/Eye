<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/recommend_bg_unlike"
    android:orientation="vertical">

    <!-- tablayout放到上面不会影响下面按钮点击事件 -->
    <android.support.design.widget.TabLayout
        android:id="@+id/video_introduce_activity_tablayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="#ffffff"
        app:tabSelectedTextColor="#ffffff"
        app:tabBackground="@null" />

    <android.support.v4.view.ViewPager
        android:id="@+id/video_introduce_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/item_video_introduce_vp_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_action_detail_back" />

    <ImageView
        android:id="@+id/item_video_introduce_vp_play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@mipmap/ic_action_play" />

    <ImageView
        android:id="@+id/item_video_introduce_vp_blur_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/video_introduce_activity_viewpager"
         />

    <RelativeLayout
        android:id="@+id/video_introduce_activity_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/video_introduce_activity_viewpager"
        android:layout_marginTop="@dimen/video_introduce_margin">

        <RelativeLayout
            android:id="@+id/one_line_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.dllo.eyepetzier.view.TypeTextView
                android:id="@+id/item_video_introduce_vp_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/video_introduce_margin"
                android:text="title"
                android:textColor="@color/video_introduce_title_text_color"
                android:textSize="@dimen/video_introduce_title_text_size"
                android:textStyle="bold" />

            <com.example.dllo.eyepetzier.view.TypeTextView
                android:id="@+id/sharp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_introduce_vp_title_tv"
                android:layout_marginLeft="@dimen/video_introduce_margin"
                android:text="#"
                android:textColor="@color/video_introduce_text_color"
                android:textSize="@dimen/video_introduce_subtitle_text_size" />

            <com.example.dllo.eyepetzier.view.TypeTextView
                android:id="@+id/item_video_introduce_vp_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_introduce_vp_title_tv"
                android:layout_toRightOf="@id/sharp"
                android:text="subtitle"
                android:textColor="@color/video_introduce_text_color"
                android:textSize="@dimen/video_introduce_subtitle_text_size" />

            <com.example.dllo.eyepetzier.view.TypeTextView
                android:id="@+id/devider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_introduce_vp_title_tv"
                android:layout_toRightOf="@id/item_video_introduce_vp_subtitle_tv"
                android:text="  /  "
                android:textColor="@color/video_introduce_text_color"
                android:textSize="@dimen/video_introduce_subtitle_text_size" />

            <com.example.dllo.eyepetzier.view.TypeTextView
                android:id="@+id/item_video_introduce_vp_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_video_introduce_vp_title_tv"
                android:layout_toRightOf="@id/devider"
                android:text="wewr"
                android:textColor="@color/video_introduce_text_color"
                android:textSize="@dimen/video_introduce_subtitle_text_size" />

            <ImageView
                android:id="@+id/item_video_introduce_vp_to_detail_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_video_introduce_vp_subtitle_tv"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/video_introduce_margin"
                android:src="@mipmap/ic_action_open_detail_more"
                android:textSize="@dimen/video_introduce_subtitle_text_size" />
        </RelativeLayout>

        <include layout="@layout/view_reuse_activity_video_introduce"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_introduce_line_height"
            android:layout_below="@+id/twoline_rl"
            android:background="@color/video_introduce_line_color" />

        <com.example.dllo.eyepetzier.view.TypeTextView
            android:id="@+id/item_video_introduce_vp_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="@dimen/video_introduce_margin"
            android:layout_marginRight="@dimen/video_introduce_margin"
            android:layout_marginTop="@dimen/video_introduce_margin"
            android:lines="4"
            android:text="fsfsdfsdf"
            android:textColor="@color/video_introduce_text_color"
            android:textSize="@dimen/video_introduce_content_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_video_introduce_vp_content_tv"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_video_introduce_like_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_video_introduce_vp_like_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_like" />

                <TextView
                    android:id="@+id/item_video_introduce_vp_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/video_introduce_text_margin_top"
                    android:text="faf"
                    android:textColor="@color/video_introduce_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_video_introduce_share_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_video_introduce_vp_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_action_share" />

                <TextView
                    android:id="@+id/item_video_introduce_vp_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/video_introduce_text_margin_top"
                    android:text="faf"
                    android:textColor="@color/video_introduce_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_video_introduce_comment_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_video_introduce_vp_comment_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/video_introduce_margin"
                    android:background="@mipmap/ic_action_reply_nopadding" />

                <TextView
                    android:id="@+id/item_video_introduce_vp_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/video_introduce_text_margin_top"
                    android:text="faf"
                    android:textColor="@color/video_introduce_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_video_introduce_download_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/video_introduce_margin">

                <ImageView
                    android:id="@+id/item_video_introduce_vp_dwowload_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/video_introduce_text_margin_top"
                    android:background="@mipmap/action_download_cut" />

                <TextView
                    android:id="@+id/item_video_introduce_vp_dwowload_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/video_introduce_text_margin_top"
                    android:text="@string/video_activity_cache"
                    android:textColor="@color/video_introduce_text_color" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/video_introduce_activity_loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/video_introduce_activity_loading_iv"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_eye_white_inner"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_eye_white_outer"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>