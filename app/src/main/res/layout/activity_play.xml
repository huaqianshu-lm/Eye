<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#456438"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/play_aty_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/play_aty_control_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/play_aty_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player_close_white" />

        <TextView
            android:id="@+id/play_aty_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_aty_time_margin"
            android:layout_toRightOf="@id/play_aty_back_iv"
            android:text="title"
            android:textColor="@color/play_aty_time_text_color"
            android:textSize="@dimen/play_aty_title_text_size" />

        <ImageView
            android:id="@+id/play_aty_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_action_share" />

        <ImageView
            android:id="@+id/play_aty_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_aty_share_iv"
            android:src="@mipmap/ic_action_favorites" />

        <LinearLayout
            android:id="@+id/play_aty_info_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_aty_like_iv"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/play_aty_info_high_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/action_high_mode" />

            <ImageView
                android:id="@+id/play_aty_info_normal_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/action_normal_mode"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/play_aty_info_low_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/action_low_mode"
                android:visibility="gone" />


        </LinearLayout>

        <ImageView
            android:id="@+id/play_aty_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_player_play" />

        <ImageView
            android:id="@+id/play_aty_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_player_next" />

        <LinearLayout
            android:id="@+id/play_aty_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/play_aty_time_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_aty_star_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/play_aty_time_text_color"
                android:textSize="@dimen/play_aty_time_text_size" />

            <SeekBar
                android:id="@+id/play_aty_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="@dimen/play_aty_seekbar_height"
                android:minHeight="@dimen/play_aty_seekbar_height"
                android:progressDrawable="@drawable/shape_seekbar"
                android:thumb="@mipmap/seekbar" />

            <TextView
                android:id="@+id/play_aty_end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="@color/play_aty_time_text_color"
                android:textSize="@dimen/play_aty_time_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/play_aty_loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/play_aty_loading_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_eye_white_inner" />

        <ImageView
            android:id="@+id/play_aty_loading_outer_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_eye_white_outer" />
    </RelativeLayout>

</RelativeLayout>