<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_author_fragment_child_rv_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/item_author_fragment_child_rv_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/item_author_fragment_child_rv_title_tv"
            style="@style/AuthorFragmentChildTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_author_fragment_child_rv_title_tv"
            android:gravity="center">

            <TextView
                android:id="@+id/sign_shape_tv"
                style="@style/AuthorFragmentChildTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textSize="@dimen/author_fragment_item_category_text_size"/>

            <TextView
                android:id="@+id/item_author_fragment_child_rv_category_tv"
                style="@style/AuthorFragmentChildTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_author_fragment_child_rv_title_tv"
                android:textSize="@dimen/author_fragment_item_category_text_size"/>

            <TextView
                android:id="@+id/sign_tv"
                style="@style/AuthorFragmentChildTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  /  "
                android:textSize="@dimen/author_fragment_item_category_text_size"/>

            <TextView
                android:id="@+id/item_author_fragment_child_rv_latestreleasttime_tv"
                style="@style/AuthorFragmentChildTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_author_fragment_child_rv_title_tv"
                android:textSize="@dimen/author_fragment_item_category_text_size"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>