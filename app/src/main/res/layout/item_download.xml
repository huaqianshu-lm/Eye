<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#444232"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/item_download_aty_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/item_download_aty_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/download_item_text_color"
        android:textSize="@dimen/download_aty_item_title_text_size"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_download_aty_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/download_aty_margin"
        android:text="@string/download_aty_item_downloaded"
        android:textColor="@color/download_item_text_color"
        android:textSize="@dimen/download_aty_item_download_text_size"/>
</RelativeLayout>