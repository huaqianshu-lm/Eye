<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/search_margin"
        android:text="@string/search_content_text"
        android:textColor="@color/search_title_text_color"
        android:textSize="@dimen/search_context_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/search_margin"
        android:text="@string/search_hot_text" />

    <com.example.dllo.eyepetzier.view.FlowLayout
        android:id="@+id/search_pop_flow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/search_margin"
        android:layout_weight="1"

        />
</LinearLayout>